<!DOCTYPE html> <!-- HTML document type declaration -->
<html lang="en"> <!-- Start of the HTML element with English language attribute -->
<head>
    <meta charset="UTF-8"> <!-- Character encoding specification -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Viewport settings for mobile devices -->
    <link rel="stylesheet" href="/css/admin.css"> <!-- Link to external CSS file -->
    <link rel="icon"  type="img/ico" href="/img/icono.ico">

    <title>Administrador</title> <!-- Page title -->
</head>
<body>
    <h1>Panel de Administración</h1> <!-- Main page heading -->

    <!-- Table to display the list of items -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Descripción</th>
                <th>Estado Actual</th>
                <th>Cambiar Estado</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop to generate table rows -->
            <% pqrssi.forEach(item => { %> <!-- Start of the loop -->
                <tr>
                    <td><%= item.id %></td> <!-- Column to display the item's ID -->
                    <td><%= item.tipo %></td> <!-- Column to display the item's type -->
                    <td><%= item.descripcion %></td> <!-- Column to display the item's description -->
                    <td><%= item.estado_id %></td> <!-- Column to display the item's current status -->
                    <td>
                        <!-- Form to change the item's status -->
                        <form action="/admin/change-status" method="post"> <!-- Form action and method -->
                            <input type="hidden" name="pqrssi_id" value="<%= item.id %>"> <!-- Hidden field to send the item's ID -->
                            <select name="estado_id"> <!-- Dropdown menu to select the new status -->
                                <option value="1">Pendiente</option> <!-- Pending status option -->
                                <option value="2">En curso</option> <!-- In progress status option -->
                                <option value="3">Atendida</option> <!-- Attended status option -->
                                <option value="4">Aplazada</option> 
                                <option value="5">Rechazada</option> 
                                <option value="6">Cancelada</option> 
                                <option value="7">Finalizada</option> 

                            </select>
                            <br>
                            <textarea name="comentario" rows="2" placeholder="Comentario"></textarea> <!-- Text area to add a comment -->
                            <br>
                            <button type="submit">Cambiar Estado</button> <!-- Button to submit the form -->
                        </form>
                    </td>
                </tr>
            <% }); %> <!-- End of the loop -->
            
        </tbody>
    </table>

    <!-- Form to log out -->

    <a href="/">Volver a Inicio</a>
</body>
</html>
