<!DOCTYPE html> <!-- HTML document type declaration -->
<html lang="en"> <!-- Start of the HTML element with English language attribute -->
<head>
    <meta charset="UTF-8"> <!-- Character encoding specification -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Viewport settings for mobile devices -->
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to external CSS file -->
    <link rel="icon"  type="img/ico" href="/img/icono.ico">
    <title>Historial PQRS</title> <!-- Page title -->
</head>
<body class="fondoHistorial">
    <h1>Historial de PQRS</h1> <!-- Main page heading -->
    <table> <!-- Table to display the PQRSSI history -->
        <tr> <!-- Table header row -->
            <th>ID</th> <!-- Column header for ID -->
            <th>Date</th> <!-- Column header for date -->
            <th>Status</th> <!-- Column header for status -->
            <th>Comment</th> <!-- Column header for comment -->
        </tr>
        <% historial.forEach(h => { %> <!-- Loop to generate table rows -->
        <tr> <!-- Data row -->
            <td><%= h.id %></td> <!-- Cell to display the history item's ID -->
            <td><%= h.fecha %></td> <!-- Cell to display the history item's date -->
            <td><%= h.estado %></td> <!-- Cell to display the history item's status -->
            <td><%= h.comentario %></td> <!-- Cell to display the history item's comment -->
        </tr>
        <% }); %> <!-- End of the loop -->
    </table>
    <a href="/view">Back to PQRS List</a> <!-- Link to return to the PQRSSI list -->
</body>
</html>