<!DOCTYPE html> <!-- HTML document type declaration -->
<html lang="en"> <!-- Start of the HTML element with English language attribute -->
<head>
    <meta charset="UTF-8"> <!-- Character encoding specification -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Viewport settings for mobile devices -->
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to external CSS file -->
    <link rel="icon"  type="img/ico" href="/img/icono.ico">
    <title>Ver PQRS</title> <!-- Page title -->
</head>
<body class="fondoPQRS">
    <h1>Ver PQRS</h1> <!-- Main page heading -->
    <table> <!-- Start of the table to display the PQRSSI -->
        <tr> <!-- Table header row -->
            <th>ID</th> <!-- Column header for ID -->
            <th>Tipo</th> <!-- Column header for Type -->
            <th>Descripción</th> <!-- Column header for Description -->
            <th>Estado</th> <!-- Column header for Status -->
            <th>Fecha</th> <!-- Column header for Date -->
            <th>Categoría</th> <!-- Column header for Category -->
            <th>Usuario</th> <!-- Column header for User -->
            <th>Historial</th> <!-- Column header for History -->
        </tr>
        <% pqrssi.forEach(p => { %> <!-- Loop to iterate over the PQRSSI -->
        <tr> <!-- Start of a table row -->
            <td><%= p.id %></td> <!-- Cell to display the ID -->
            <td><%= p.tipo %></td> <!-- Cell to display the Type -->
            <td><%= p.descripcion %></td> <!-- Cell to display the Description -->
            <td><%= p.estado %></td> <!-- Cell to display the Status -->
            <td><%= p.fecha %></td> <!-- Cell to display the Date -->
            <td><%= p.categoria %></td> <!-- Cell to display the Category -->
            <td><%= p.usuario %></td> <!-- Cell to display the User -->
            <td><a href="/historial/<%= p.id %>">View History</a></td> <!-- Link to view the History -->
        </tr>
        <% }); %> <!-- End of the loop -->
    </table>
    <a href="/">Return to Home</a> <!-- Link to return to the home page -->
</body>
</html>
